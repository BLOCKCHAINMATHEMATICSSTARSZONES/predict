{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es5",
      "es6"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2015",
    "allowJs": true,
    "removeComments": false,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@maticnetwork/*": [
        "lib/*"
      ],
      "typechain": [
        "typechain/"
      ]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./src",
      "./src/typings",
      "./node_modules/ethers/index.d.ts",
      "./node_modules/@nomiclabs/buidler-waffle/src/type-extensions.d.ts",
      "./node_modules/@nomiclabs/buidler-ethers/src/type-extensions.d.ts",
    ]
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "node_modules/ethers/index.d.ts",
    "node_modules/@nomiclabs/buidler-waffle/src/type-extensions.d.ts",
    "node_modules/@nomiclabs/buidler-ethers/src/type-extensions.d.ts",
    "artifacts/**/*",
    "artifacts/**/*.json",
    "typechain/**/*",
    "src",
    "lib",
    "test",
    "buidler.config.ts",
    "tasks"
  ]
}
